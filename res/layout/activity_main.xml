<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.minal.wtcaccessories.MainActivity" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/img_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:onClick="OpenTimeConnection"
                android:scaleType="fitXY"
                android:src="@drawable/timeconnection" />

            <ImageView
                android:id="@+id/img_amei"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dip"
                android:adjustViewBounds="true"
                android:onClick="OpenAmei"
                android:scaleType="fitXY"
                android:src="@drawable/amei" />

            <ImageView
                android:id="@+id/img_aboutcasio"
                android:layout_width="match_parent"
                android:layout_height="190dp"
                android:layout_marginTop="20dip"
                android:adjustViewBounds="true"
                android:onClick="OpenCasio"
                android:scaleType="fitXY"
                android:src="@drawable/casio" />

        </LinearLayout>
    </ScrollView>

</RelativeLayout>
